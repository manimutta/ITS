
  <div class="container">
    <div class="row">
      <div class="col-md-5 col-md-offset-3">
        <div class="well">
        <h2>Log in</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, class: "input-no-material", placeholder: "Email"%>
            </div>
            <br>
            <div class="field">
              <%= f.password_field :password, autocomplete: "off", class: "input-no-material", placeholder: "password" %>
            </div>

<!--             <div class="form-group label-floating">
              <label class="control-label" for="">Email</label>
              <input class="form-control" id="" type="text">
            </div> -->
            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-primary btn-raised" %>
            </div>
          <% end %>
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
