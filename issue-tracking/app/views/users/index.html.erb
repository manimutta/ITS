<div class="container">
<h3>All Users</h3>
<table id="user_table" class="table table-striped table-bordered">
  <thead>
    <tr>
      <td>Id</td>
      <td> Email</td>
      <td>Edit</td>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', users_edit_user_path(id: user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<script>
$(document).ready(function() {
    $('#user_table').DataTable();
} );
</script>