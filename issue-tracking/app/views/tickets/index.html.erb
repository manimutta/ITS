<div class="container">
<div class="row">
<div class="col-md-6"><h3>All Tickets</h3></div>
<div class="col-md-6" align="right"><%= link_to 'New Ticket', new_ticket_path, class: "btn btn-primary btn-raised "%></div></div>
  <table id="tickets_datatable" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th >Show</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= ticket.title %></td>
          <td><%= ticket.description %></td>
          <td><%= link_to 'Show', ticket %></td>
          <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
          <td>
          <% if ticket.user_id  == current_user.id %>
          <%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
$(document).ready(function() {
    $('#tickets_datatable').DataTable();
} );
</script>